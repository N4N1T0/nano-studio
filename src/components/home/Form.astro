---
// Form.astro - Minimalist contact form component
---

<section class="w-full max-w-2xl mx-auto p-8">
  <div class="space-y-8 menu-col">
    <!-- Form Header -->
    <div class="text-center space-y-4">
      <p class="text-primary-foreground text-xl uppercase">
        Let's create something amazing together
      </p>
    </div>

    <!-- Name Field -->
    <div class="space-y-4 menu-col">
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full px-0 py-4 text-lg bg-transparent border-0 border-b text-primary-foreground border-primary-foreground placeholder-primary-foreground/75 focus:border-primary focus:outline-none transition-colors duration-300 ease-out form-item"
        placeholder="Your full name"
      />

      <!-- Email Field -->
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-0 py-4 text-lg bg-transparent border-0 border-b text-primary-foreground border-primary-foreground placeholder-primary-foreground/75 focus:border-primary focus:outline-none transition-colors duration-300 ease-out form-item"
        placeholder="your.email@example.com"
      />

      <!-- Message Field -->
      <textarea
        id="message"
        name="message"
        rows="5"
        required
        class="w-full px-0 py-4 text-lg bg-transparent border-0 border-b text-primary-foreground border-primary-foreground placeholder-primary-foreground/75 focus:border-primary focus:outline-none transition-colors duration-300 ease-out form-item"
        placeholder="Tell us about your project..."></textarea>

      <!-- Submit Button -->
      <div class="pt-8 form-item">
        <button
          type="submit"
          class="group relative w-full md:w-auto px-12 py-4 text-primary bg-primary-foreground font-medium uppercase tracking-wide overflow-hidden transition-all duration-300 ease-out hover:bg-muted-foreground hover:text-primary-foreground focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-transparent"
        >
          <span class="relative z-10">Send Message</span>
          <div
            class="absolute inset-0 bg-muted-foreground transform translate-y-full group-hover:translate-y-0 transition-transform duration-300 ease-out"
          >
          </div>
        </button>
      </div>
    </div>

    <!-- Success Message -->
    <div
      id="success-message"
      class="hidden p-6 bg-primary/5 border border-primary/20 text-center"
    >
      <p class="text-primary font-medium">
        Thank you for your message! We'll get back to you soon.
      </p>
    </div>
  </div>
</section>
